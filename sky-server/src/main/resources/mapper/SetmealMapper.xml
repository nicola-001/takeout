<mapper namespace="com.sky.mapper.SetmealMapper">

    <!--    根据分类id查询套餐接口-->
    <select id="myList" resultType="com.sky.entity.Setmeal">
        select * from setmeal
        <where>
            <if test="name != null and name != ''">
                and name like concat('%',#{name},'%')
            </if>
            <if test="categoryId != null">
                and category_id = #{categoryId}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>
